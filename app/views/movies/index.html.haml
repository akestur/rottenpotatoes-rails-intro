-#  This file is app/views/movies/index.html.haml
%h2 All Movies

%table#movies.table.table-striped.col-md-12
  %thead
    %tr
      %th{:id => "title_header", :class => @title_toggle}= link_to "Movie Title", movies_path(:sort_order => "title")
      %th Rating
      %th{:id => "release_date_header", :class => @date_toggle}= link_to "Release Date", movies_path(:sort_order => "release_date")
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
